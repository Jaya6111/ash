package Control_Flow;
import java.util.Scanner;
public class Switch1 {
	public static void main(String[] args) {
		int num;
		Scanner sc = new Scanner(System.in);
		System.out.println("Choose the mobile you like, by typing number given to it: ");
		num = sc.nextInt();
		switch(num) {
		case 1:
			System.out.println("you Selected the MI phone");
			break;
		case 2:
			System.out.println("you selected the Oppo Mobile");
			break;
		case 3:
			System.out.println("you selected the Vivo Phone");
			break;
		case 4:
			System.out.println("you selected the Samsung phone");
			break;
		case 5:
			System.out.println("you selected the Iphone");
			break;
		default:
			System.out.println("Give the input below '6'.");
		}
	}

}
